# Use legacy peer dependencies to avoid issues during CI
legacy-peer-deps=true

# Increase network timeout for slower connections
network-timeout=300000

# Enable package-lock generation for npm ci to work
package-lock=true

# Makes npm run in production mode for Cloudflare Pages
NODE_ENV=production 

# Disable rollup native binaries that are causing problems
rollup-plugin-node-resolve:browser=true

# Disable optional dependencies altogether
optional=false

# Skip platform-specific optional installs
omit=optional

# Force use of JS implementation instead of native modules
ROLLUP_SKIP_NODEJS=true
